<div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="panel panel-info" >
    <div class="panel-heading" >
      <div class="panel-title"><h2>Reset Password</h2></div>
    </div>
    <div style="padding-top:30px" class="panel-body" >
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <div class="col-md-12">
            <label for="password" class="control-label">Password</label>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class: "form-control" %> <br/>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12">
            <label for="password" class="control-label">Confirm Password</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %><br/>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12">
            <span><%= f.submit "Reset password", class:"btn btn-block"%></span>
          </div>
        </div>
      <% end %>
    </div>
    <div style="margin-left:10px;margin-bottom: 10px; padding:10px"><%= link_to "Back to Log in", new_session_path(resource_name)%></div>
  </div>
</div>
