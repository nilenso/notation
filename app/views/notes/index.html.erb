<div class="dashboard">
  <% if @notes.length > 0 %>
    <div class="wrapper">
      <div class="searchBar">
        <input id="searchQueryInput" type="text" name="searchQueryInput" placeholder="Search" value="" />
        <button id="searchQuerySubmit" type="submit" name="searchQuerySubmit">
          <svg style="width:24px;height:24px" viewBox="0 0 24 24"><path fill="#666666" d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
          </svg>
        </button>
        <div class="new">
          <a href="notes/new" class="btn btn-primary"> <strong>New</strong> <%=image_tag src="plus.png", size:4*4 %></a>
        </div>
      </div>
    </div>

    <table id="listing" style="margin-bottom: 10%">
        <tr>
          <th>Title</th>
          <th>Created At</th>
          <th>Modified At</th>
        </tr>
        <% @notes.each do |note| %>
          <tr>
            <td onclick="window.location='<%= edit_notes_path(note) %>';"><%= note.title %></td>
            <td><%= note.created_at %></td>
            <td><%= note.updated_at %></td>
            <td>
              <%= link_to '', destroy_notes_path(note), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn fa fa-trash"%>
            </td>
          </tr>
        <% end %>
    </table>
  <% else %>
    <div class="banner" style="color:rebeccapurple;background-color: lavender; background-image: none">
      <h1>Hmm, looks like you haven't created a note yet</h1>
      <a class="btn btn-lg" href="notes/new" role="button"><i>Create Note ‚ùØ</i></a>
    </div>
  <% end %>
</div>
