<div class="editor">
  <%= form_with model: @note, url: notes_path(@note), method: :patch do |form| %>

  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@note.errors.count, "error") %>
        prohibited this note from being saved:
      </h2>
      <ul>
        <% @note.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group col-md-12" style="margin-top: 10px">
      <label for="title">Title</label>
      <div>
        <%= form.text_field :title, class:"form-control" %>
      </div>
    </div> <br/>

    <div class="form-group col-md-12" style="margin-bottom: 0">
      <label for="body" >Description</label>
      <div>
        <%= form.text_area :body %>
      </div>
    </div>

    <div class="form-group col-md-12" style="text-align: center;">
      <%= form.submit "Save", class: "btn"%> &nbsp;&nbsp;&nbsp;&nbsp;
      <span class="btn", style="background-color: red; border-color: red;"><%= link_to 'Delete', destroy_notes_path(@note), method: :delete, data: { confirm: 'Are you sure?' } %></span>&nbsp;&nbsp;&nbsp;&nbsp;
      <span class="btn" style="background-color: grey; border-color: grey"><%= link_to 'Back', notes_path %></span>
    </div>

  <% end %>
</div>

<script type="text/javascript">
    function displayEditor() {
        new SimpleMDE({element: document.getElementById("note_body")});
    }
    displayEditor();
</script>
